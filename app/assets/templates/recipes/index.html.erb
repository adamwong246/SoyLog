<h1>Recipes</h1>
<table class="table table-striped">
  <thead>
    <tr>
        <th>User</th>
        <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr ng-repeat="recipe in recipes">
      <td>
        <a href="/recipes/{{recipe.id}}">
          {{recipe.user_id}}
        </a>
      </td>
        <td>
          {{recipe.name}}
        </td>
      <td>
        <a href="/recipes/{{recipe.id}}/edit"
          class="btn btn-primary"><i class="icon-edit"></i>
          Edit
        </a>
        <button ng-click="destroy()" class="btn btn-danger">
          <i class="icon-trash"></i> Delete
        </button>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <a href='/recipes/new' class="btn btn-primary">
    <i class="icon-plus"></i>New
  </a>
</p>
