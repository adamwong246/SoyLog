<h1>
  <%= "Indexing " + collection.first.class.to_s.pluralize %>
</h1>
 
 <h3>
  <%= collection.first.class.description  %>
</h3>

<%= link_to "Create a new #{collection.first.class}", :controller => params[:controller], :action => :new %> 

<table>
  <tr>    
    <% columns.each do |column| %>
      <th>
        <%= column.to_s %>
      </th>
    <% end %>
  </tr>



  <% collection.each do |element| %>
    <tr>
      <% columns.each do |column| %>
        <td>
          <%= apply_chain_link_or_print([*column], element) %>
        </td>
      <% end %>


      <td><%= render :partial => "layouts/actions", :locals => { :object => element, :actions => [:show, :edit, :destroy]} %></td>
    </tr>
  <% end %>

